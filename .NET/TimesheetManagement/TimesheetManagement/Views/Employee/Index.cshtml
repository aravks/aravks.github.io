@using System.Data
@using System.Data.SqlClient
@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_IndexLayout.cshtml";
}
<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/css/Layout.css" rel="stylesheet" />
    <link href="~/Content/css/StyleSheet.css" rel="stylesheet" />
    <link href="~/Content/bootstrap10.css" rel="stylesheet" />

    <link href="~/Content/css/Site.css" rel="stylesheet" />

    <title>Home</title>

    <style>
        thead {
            text-align: center;
            text-shadow: 2px 7px 5px rgba(0,0,0,0.3), 0px -4px 10px rgba(255,255,255,0.3);
            background-color: dimgray;
            font-size: 20px;
            font-display: block;
            color: white;
        }

        tr {
            text-align: center;
            margin-left: 4px;
            margin-right: 4px;
        }

        th, td {
            padding: 8px;
        }

        tr:hover {
            background-color: dimgrey;
            cursor: pointer;
        }



        tr:nth-child(even) {
            background-color: #f2f2f2
        }



            tr:nth-child(even):hover {
                background-color: dimgrey;
                cursor: pointer;
            }

        .tab {
            text-shadow: 2px 7px 5px rgba(0,0,0,0.3), 0px -4px 10px rgba(255,255,255,0.3);
        }

        .lin {
            float: right;
            font-size: 30px;
            left: 1250px;
            position: fixed;
            color: cornflowerblue;
        }
    </style>
</head>
<body class="mt-5" style="font-family: 'Times New Roman'">
    <br />
    <form method="post" name="Display"><br>
        <h1 style=" color:#f00;font-size:30px; ">
            EMPLOYEE LIST
            @Html.ActionLink("Add New Employee", "AddEditGet", null, new { @class = "lin" })
        </h1>
        <br>
        <br>
        <br>
        <br>

        @{
            if (Model.Rows.Count > 0)
            {
                <table class="table table-striped table-hover bg-light text-dark" border="1" align="center" style="background-color: lightgray;font-size: 18px;margin-left: 10px;box-shadow: 5px 10px lightgray;"width="97%" height="100%">
                    <thead class="bg-dark text-white text-center" >
                        <tr>
                            <th>NAME</th>
                            <th>DOB</th>
                            <th>ROLE</th>
                            <th>GENDER</th>
                            <th>EMAIL</th>
                            <th>PHONE</th>
                            <th>ADDRESS</th>
                            <th colspan="2">ACTION</th>
                        </tr>
                    </thead>
                    @foreach (DataRow dr in Model.Rows)
                    {
                        <tr>
                            <td>@dr["emp_name"].ToString() </td>
                            <td>@Convert.ToDateTime(@dr["emp_dob"]).ToShortDateString() </td>
                            <td>@dr["Role_name"].ToString() </td>
                            <td>@dr["gender_name"].ToString() </td>
                            <td>@dr["emp_email"].ToString() </td>
                            <td>@dr["emp_phone"].ToString() </td>
                            <td>@dr["emp_address"].ToString() </td>
                            <td>@Html.ActionLink("Edit ", "AddEditGet", new { EmpID = dr["emp_id"].ToString(), RID = dr["Role_id"].ToString(), Egend = dr["gender_id"].ToString() }, new { @class = "tab" })</td>
                            <td>@Html.ActionLink("Delete", "EmployeeDelete", new { EmpID = dr["emp_id"].ToString() }, new { @class = "tab", onclick = "return confirm('Are you sure you want to delete?');" })</td>
                        </tr>

                    }
                </table>
                <br />
            }
            else
            {
                <span class="text-dark ml-3"> No records found!!</span>
            }
        }
    </form>
</body>
</html>
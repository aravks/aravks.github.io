@using System.Data
@using System.Data.SqlClient
@model System.Data.DataTable
@{
    Layout = "~/Views/_IndexLayout.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="~/main.js"></script>
    <link href="~/Content/bootstrap10.css" rel="stylesheet" />
    <title>Index</title>
</head>
<body style="font-family: 'Times New Roman'">
    <form method="post" name="Display"><br>
        <h1 style="font-size:30px;display:block;">
            PROJECT LIST</h1>
            @Html.ActionLink("Add New Project", "AddEdit", "Project", null, new { @class = "link" })
        
        <br><br><br>
        @{
            if (Model.Rows.Count > 0)
            {
                <br>
                <table class="table table-striped table-hover bg-light text-dark" border="1" align="center" cellpadding="8" style="background-color: lightgray;border-radius:5px;font-size: 18px;margin-left: 10px;box-shadow: 5px 10px lightgray;font-family:'Times New Roman';"width="97%"  height="100%">
                    <thead class="bg-dark text-white text-center" style="font-weight:bold">
                        <tr>
                           
                            <td>
                                PROJECT NAME
                            </td>
                            <td>
                                DESCRIPTION
                            </td>

                            <td colspan="2">ACTION</td>
                        </tr>
                    </thead>
                    @foreach (DataRow dr in Model.Rows)
                    {
                        <tr>
                            <td>@dr["ProjectName"].ToString() </td>
                            <td>@dr["Description"].ToString() </td>
                            <td>@Html.ActionLink("Edit", "AddEdit", new { ProjectId = dr["ProjectId"].ToString() }, new { @class = "tab" })</td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { ProjectId = dr["ProjectId"].ToString() }, new
                           { onclick = "return confirm('Are you sure?' );" })
                            </td>
                        </tr>
                    }
                </table>
                <br />
            }
            else
            {
                <span> No records found!!</span>
            }
        }
    </form>
</body>
</html>
